<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Global" parent="Theme.Sherlock">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:listViewStyle">@style/Widget.ListView</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>
    
    <style name="ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="background">@color/actionbar_background</item>
        <item name="android:background">@color/actionbar_background</item>
        <item name="displayOptions">showCustom</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="customNavigationLayout">@layout/actionbar_weather_section</item>
        <item name="android:customNavigationLayout">@layout/actionbar_weather_section</item>
    </style>

    <style name="Widget.ListView" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:scrollbars">none</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:divider">@color/header_background</item>
    </style>

    <style name="PagerHeaderDefault">
        <item name="activeTextColor">@color/primary_text</item>
        <item name="inactiveTextColor">@color/primary_text</item>
        <item name="showBottomBar">false</item>
        <item name="showTopShadow">false</item>
        <item name="tabColor">@android:color/white</item>
        <item name="fadingEdgeColorHint">@color/header_background</item>
        <item name="tabTextSize">@dimen/header_tab_text_height</item>
        <item name="tabHeight">@dimen/header_tab_height</item>
        <item name="android:background">@color/header_background</item>
    </style>

</resources>